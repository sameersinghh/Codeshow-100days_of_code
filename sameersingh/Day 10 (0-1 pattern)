#include<iostream>
using namespace std;

int main(){

 int n;  //initialisation of variable
 cout<<"Please input a number \n";  //asking user for input 
 cin>>n;  //taking input

 for (int i = 1; i <=n; i++)  //'for' loop to print 0-1 pattern
 {
     for (int j = 1; j <=i; j++)
     {
         if ((i+j)%2==0)
         {
             cout<<"1 ";
         }
         else
         {
             cout<<"0 ";
         }
     }
     cout<<endl;
 }
    return 0;
}
