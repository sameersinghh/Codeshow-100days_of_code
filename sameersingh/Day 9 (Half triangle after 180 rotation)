#include<iostream>
using namespace std;

int main(){

 int n;  //initialisation of variable
 cout<<"Please input a number \n";  //asking user for input 
 cin>>n;  //taking input

 for (int i = 1; i <=n; i++)  //'for' loop to print half triangle
 {
    for (int j= 1; j<=n; j++)
    {
        if(j<=n-i)
        {
            cout<<" ";
        }
        else
        {
            cout<<"*";
        }
    }
    cout<<endl;
 }
    return 0;
}
