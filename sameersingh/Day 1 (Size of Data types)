#include <iostream>
using namespace std;

int main(){

int a;
short int b;
long int c;
long long int d;
float e;
double f;
signed int g;
unsigned int h;

cout<<"Size of int "<<sizeof(a)<<endl;
cout<<"Size of short int "<<sizeof(b)<<endl;
cout<<"Size of long int "<<sizeof(c)<<endl;
cout<<"Size of long long int "<<sizeof(d)<<endl;
cout<<"Size of float "<<sizeof(e)<<endl;
cout<<"Size of double "<<sizeof(f)<<endl;
cout<<"Size of signed int "<<sizeof(g)<<endl;
cout<<"Size of unsigned int "<<sizeof(h)<<endl;
 
    return 0;
    
}
