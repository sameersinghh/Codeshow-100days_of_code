#include<iostream>
using namespace std;

int main(){

 int n;  //initialisation of variable
 cout<<"Please input a number to print diamond pattern \n";  //asking user for input
 cin>>n;  //taking input

 for (int i = 1; i <=n; i++)  //'for' loop to construct solid rhombus
 {
     for (int j= 1; j<=n-i; j++)
     {
         cout<<" ";
     }

     for (int j = 1; j <=n; j++)
     {
         cout<<"*";
     }
      cout<<endl; 
 }
    return 0;
}
