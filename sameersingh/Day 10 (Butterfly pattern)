#include<iostream>
using namespace std;

int main(){

 int n;  //initialisation of variable
 cout<<"Please input a number \n";  //asking user for input 
 cin>>n;  //taking input

 for (int i = 1; i <=n; i++)  //'for' loop to print upper part of butterfly pattern
 {
     for (int j = 1; j <=i; j++)
     {
       cout<<"*";    
     }
     for (int j = 1; j<= 2*n - 2*i ; j++)
     {
         cout<<" ";
     }
      for (int j = 1; j <=i; j++)
     {
       cout<<"*";    
     }
     cout<<endl;
 }

 for (int i = n; i >=1; i--)  //'for' loop to print lower part of butterfly pattern
 {
     for (int j = 1; j <=i; j++)
     {
       cout<<"*";    
     }
     for (int j = 1; j<= 2*n - 2*i ; j++)
     {
         cout<<" ";
     }
      for (int j = 1; j <=i; j++)
     {
       cout<<"*";    
     }
     cout<<endl;
 }
 
    return 0;
}
