#include<iostream>
using namespace std;

int main(){

 int n;  //initialisation of variable
 cout<<"Please input a number \n";  //asking user for input
 cin>>n;  //taking input

 for (int i = 1; i <=3 ; i++)  //'for' loop to print zig-zag pattern
 {
     for (int j = 1; j <=n ; j++)
     {
         if (((i+j)%4==0) || (i==2) && (j%4==0))
         {
             cout<<"* ";
         }
         else
         {
             cout<<"  ";
         }
         
     }
    cout<<endl; 
 }

    return 0;
}
