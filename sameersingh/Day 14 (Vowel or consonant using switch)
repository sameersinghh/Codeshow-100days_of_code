#include<iostream>
using namespace std;

int main(){
    
 char vowel;  //initialisation of variable
 cout<<"Enter a character \n";  //asking user for input
 cin>>vowel;  //taking input

 switch (vowel)  //using 'switch' statement to check whether vowel or consonant
 {
 case 'a':
     cout<<"It is a vowel";
     break;
case 'e':
     cout<<"It is a vowel";
     break;
case 'i':
     cout<<"It is a vowel";
     break;
case 'o':
     cout<<"It is a vowel";
     break;
case 'u':
     cout<<"It is a vowel";
     break;
case 'A':
     cout<<"It is a vowel";
     break;
case 'E':
     cout<<"It is a vowel";
     break;          
case 'I':
     cout<<"It is a vowel";
     break;
case 'O':
     cout<<"It is a vowel";
     break;
case 'U':
     cout<<"It is a vowel";
     break;
 default:
     cout<<"It is a consonant";
     break;
 }

    return 0;
}
