#include<iostream>
using namespace std;

int main(){

 int n;  //initialisation of variable
 cout<<"Please input a number to print hollow rhombus pattern  \n";  //asking user for input
 cin>>n;  //taking input

 for (int i = 1; i <=n; i++)  //'for' loop to construct hollow rhombus
 {
     for (int j= 1; j<=n-i; j++)
     {
         cout<<" ";
     }

     for (int j = 1; j <=n; j++)
     {
        if (i==1 || i==n || j==1 || j==n)
        {
            cout<<"*";
        }
        else
        {
            cout<<" ";
        }
     }
      cout<<endl; 
 }
    return 0;
}
